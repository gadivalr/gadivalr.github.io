---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2 style="display: flex; align-items: center; gap: 0.5em;">
      <span style="display: flex; align-items: center;">
        <!-- Icono SVG de engranaje -->
        <svg width="32" height="32" fill="none" viewBox="0 0 24 24" stroke="currentColor" style="color:#000000;">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 15.5A3.5 3.5 0 1 0 12 8.5a3.5 3.5 0 0 0 0 7zm7.94-2.34a1 1 0 0 0 .26-1.09l-1-1.73a1 1 0 0 1 0-.94l1-1.73a1 1 0 0 0-.26-1.09l-2-2a1 1 0 0 0-1.09-.26l-1.73 1a1 1 0 0 1-.94 0l-1.73-1a1 1 0 0 0-1.09.26l-2 2a1 1 0 0 0-.26 1.09l1 1.73a1 1 0 0 1 0 .94l-1 1.73a1 1 0 0 0 .26 1.09l2 2a1 1 0 0 0 1.09.26l1.73-1a1 1 0 0 1 .94 0l1.73 1a1 1 0 0 0 1.09-.26l2-2z"/>
        </svg>
      </span>
      <a href="/">{SITE_TITLE}</a>
    </h2>
    <input type="checkbox" id="nav-toggle" class="nav-toggle" />
    <label for="nav-toggle" class="nav-toggle-label">
      <span></span>
      <span></span>
      <span></span>
    </label>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>
<style>
	header {
		position: fixed;
		   top: 0;
    	left: 0;
    	width: 100vw;
    	z-index: 100;
		margin: 0;
		padding: 0em 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		position: relative; /* Para posicionar el men√∫ hamburguesa */
	}
	nav a {
		padding: 1em 0.5em;
		color: #000000;
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: #000000;
	}
	.internal-links {
		display: flex;
		gap: 0.5em;
		flex-direction: row; /* Horizontal en escritorio */
		position: static;
		background: none;
		max-height: none;
		overflow: visible;
		width: auto;
		box-shadow: none;
		transition: none;
		margin-right: 40px;
	}
	.nav-toggle,
	.nav-toggle-label {
		display: none;
		margin-right: 1em;
	}
	@media (max-width: 600px) {
		.internal-links {
			flex-direction: column;
			position: absolute;
			top: 100%;
			left: 0;
			right: 0;
			background: white;
			max-height: 0;
			overflow: hidden;
			width: 100%;
			box-shadow: 0 2px 8px rgba(15,18,25,0.05);
			transition: max-height 0.3s;
			z-index: 10;
		}
		.nav-toggle:checked ~ .internal-links {
			max-height: 300px;
			padding: 0.5em 0;
			width: auto;
		}
		.nav-toggle-label {
			display: flex;
			margin-left: auto;
			margin-right: 35px;
		}
		nav {
			flex-wrap: wrap;
		}
		header {
		padding: 1em 1em;
	}
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
